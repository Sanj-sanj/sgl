---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import MobileMenu from "../components/MobileMenu.astro";
import SocialMediaButton from "../components/react/SocialMediaButton";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-stone-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#7d0001" />
    <meta
      name="description"
      property="og:description"
      content="SGL Trucking Ltd. located in Surrey / Delta BC, Canada. Transnational carrier service. Offering unmatched reliability, SGL Trucking is the best transportation company in The Greater Vancouver Region, with years of reputable experience."
    />
    <!-- <meta property="url" content="https://www.sgltrucking.com" /> -->
    <!-- Social Media -->
    <meta
      property="og:description"
      content="SGL Trucking Ltd. located in Surrey / Delta BC, Canada. Transnational carrier service. Offering unmatched reliability, SGL Trucking is the best transportation company in The Greater Vancouver Region, with years of reputable experience."
    />
    <meta property="og:site_name" content="101 Vinylz" />
    <meta property="og:url" content="https://www.101vinylz.com" />
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- <meta name="generator" content={Astro.generator} /> -->
    <title>{title}</title>
  </head>
  <body class="relative">
    <Header />
    <!-- WINDOW PANE DISPLAYS the NAVIGATION ON MOBILE VIEW -->
    <MobileMenu />
    <!-- SLOT INJECTS 'PAGE' FOLDER DATA -->
    <slot />
    <!-- FOOTER -->
    <Footer />
  </body>
  <SocialMediaButton client:load={true} />
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  main {
    font-size: 20px;
    line-height: 1.6;
  }
  #hero-title {
    text-shadow: black 2px 2px 4px;
  }
</style>
