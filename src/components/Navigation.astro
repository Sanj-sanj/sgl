---
import PopupNavigation from "./react/PopupNavigation";

interface Props {
  orientation: "horizontal" | "vertical";
}

const { orientation } = Astro.props;
---

<nav class="w-full flex">
  <ul
    class:list={[
      ` flex text-center items-center`,
      `${orientation === "vertical" && " flex-col items-center w-full pt-6"}`,
    ]}
  >
    <li
      class:list={`sm:ml-2.5 text-center px-2 relative md:flex${orientation === "vertical" && " w-full py-4"}`}
    >
      <a href="/">Home</a>
    </li>

    <li
      class:list={`sm:ml-2.5 text-center px-2 relative md:flex${orientation === "vertical" && " w-full py-4"}`}
    >
      <PopupNavigation
        client:load
        text={"About"}
        subTexts={[
          { text: "About Us", path: "/about" },
          { text: "Our Services", path: "/about#services" },
          { text: "Environmental Policy", path: "/about#environment" },
        ]}
        orientation={orientation}
      />
    </li>
    <li
      class:list={`sm:ml-2.5 text-center px-2 relative md:flex${orientation === "vertical" && " w-full py-4"}`}
    >
      <PopupNavigation
        client:load
        text={"Contact"}
        subTexts={[
          { text: "Contact Us", path: "/contact" },
          { text: "Careers", path: "/contact#careers" },
        ]}
        orientation={orientation}
      />
    </li>
  </ul>
</nav>
